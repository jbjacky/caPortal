.my-special-class .mat-expansion-panel-body {
    padding: 0;
    
    border-left: 4px solid #0e76c1;
  }

  .my-special-class .mat-expansion-panel-header-description, .mat-expansion-panel-header-title:hover {

    color: #23b7e5;
}
  .my-special-class .mat-expansion-panel-header.mat-expanded:focus, .mat-expansion-panel-header.mat-expanded:hover{
    color: #23b7e5;
    
  border-left: 4px solid #0e76c1;
  background-color: #efefef;
  }

  
  .my-special-class ::after{
    content: attr(target);
    color:#ef4a4a;
  }

  .my-special-class   .mat-expansion-panel-header-title{
    color: #333;
  }


  .my-special-class .mat-expansion-panel.ng-star-inserted.mat-expanded.mat-expansion-panel-spacing .mat-expansion-panel-header{
    
  border-left: 4px solid #0e76c1;
  background-color: #efefef;
  }

  
   .vertical-alignment-helper {
    display:table;
    height: 100%;
    width: 100%;
  }
   .vertical-align-center {
    /* To center vertically */
    display: table-cell;
    vertical-align: middle;
  }
   .modal-content {
    /* Bootstrap sets the size of the modal in the modal-dialog class, we need to inherit it */
    width:inherit;
    height:inherit;
    /* To center horizontally */
    margin: 0 auto;
  }
  