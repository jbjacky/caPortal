/* 明細table頭 */
.D_leftP_toppadding{
    text-align: left;
    padding: 0px;
    padding-top: 7px;
}
.D_tabletop{
    display: inherit;
}
.P_date{
    display: none;
}
.P_context{
    display: none;
}
.D_context{
    text-align: center;
    border:1px solid #e0e0e0;
    border-right: 0px;
    border-top:0px;
    padding:5px 15px;
}
.P_left{
    text-align: right;
}
/* 明細table尾*/
.a-block-buttom {
    width: 850px;
    margin: 0 auto;
    
}
.inputTextarea{
    width: 100%;
    resize: none;
    height:88px;
    margin-top: 5px;
    display: block;
    padding: 6px 12px;
    font-size: 15px;
    line-height: 1.5;
    color: #555555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 2px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  
  }
@media (min-width: 1440px){

    .a-block-buttom {
        width: 900px;
        padding-left: 15px;
        padding-right: 15px;
        margin: 0 auto;
    }
}
@media screen and (max-width:1000px) {
/* 明細table頭 */
    .D_leftP_toppadding{
        padding-top: 0px;
    }
    .D_tabletop{
        display: none;
    }
    .P_date{
        background-color: #edf5ff;
        text-align: left;
        font-weight: bolder;
        display: block;
        position: unset;
        padding: 5px 20px;
        border:1px solid #e0e0e0;
    }
    .P_context{
        /* background-color: #ffffff; */
        text-align: left;
        display:inherit;
        padding: 3px 20px;
    }
    .D_context{
        display: none;
    }
    .P_left{
        text-align: left;
    }
/* 明細table尾*/
    .P_leftZero{
        padding-left: 0px
    }
}
@media (max-width: 800px){
    ::ng-deep #footer {
        display: none;
    }
}