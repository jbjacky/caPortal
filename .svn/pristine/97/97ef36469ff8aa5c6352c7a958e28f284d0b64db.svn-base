    text-align: center;
    border:1px solid #e0e0e0;
    border-right: 0px;
    border-top:0px;
    padding:5px 15px;
}
.P_left{
    text-align: right;
}
.D_button{
    display: inline;
}
.P_button{
    display: none;
}

.P_show{
    display: none;
}
@media screen and (max-width:1000px) {
    .stateblock{
        display: none;
    }
    .first-form-group{
        padding-bottom: 5px
    }
    .firstinone-form-group{
        padding-bottom: 10px;
     } 
     .firstintwo-form-group{
         padding-top:10px
     }
     .oneintwotitle{
        text-align: left;
        padding: 0px
    }
     .oneintwocontent{
         padding: 0px
     }
     .writerow{
        padding-left: 0px;
        padding-right: 0px
    }
    .D_left_P_toppadding{
        padding-top: 0px;
    }
    .D_tabletop{
        display: none;
    }
    .P_date{
        background-color: #edf5ff;
        text-align: left;
        font-weight: bolder;
        display: block;
        position: unset;
        padding: 5px 20px;
        border:1px solid #e0e0e0;
    }
    .P_context{
        /* background-color: #ffffff; */
        text-align: left;
        display:inherit;
        padding: 3px 20px;
    }
    .D_context{
        display: none;
    }
    .P_left{
        text-align: left;
    }
    .D_button{
        display: none;
    }
    .P_button{
        display: inherit;
    }
    
    .P_show{
        display: inherit;
    }
}
    


@media (max-width: 800px){
    ::ng-deep #footer {
        display: none;
    }
}
::ng-deep .vertical-alignment-helper {
    display:table;
    height: 100%;
    width: 100%;
  }
  ::ng-deep .vertical-align-center {
    /* To center vertically */
    display: table-cell;
    vertical-align: middle;
  }
  ::ng-deep .modal-content {
    /* Bootstrap sets the size of the modal in the modal-dialog class, we need to inherit it */
    width:inherit;
    height:inherit;
    /* To center horizontally */
    margin: 0 auto;
  }

  @media screen and (max-width:550px){
    .modal-dialog{
      width: 300px;
    }
    .modal-footer{
      text-align: center
    }
  }