.information_row{
    padding:0px 20px;
    margin-right: 0px;
    margin-left: 0px;
    padding-left: 0px;
    padding-right: 0px;
}
.information_one{
    border: 1px #e0e0e0    solid;
}
.information_title{
    background-color: #f9f9f9;
    padding-top: 5px;
    padding-bottom: 5px;
    text-align: center;
}
.information_content{
    /* text-align: center; */
    padding-top: 5px;
    padding-bottom: 5px;
}
.writerow{
    padding-left: 20px;
    padding-right: 0px
}
.inputTextarea {
    width: 100%;
    resize: none;
    height: 83px;
    border: 0px;
    padding: 5px 10px;
    background-color:#fff 
}
.oneintwotitle{
    text-align: right
}
.D_left_P_toppadding{
    text-align: left;
    padding: 0px;
    padding-top: 7px;
}
.D_tabletop{
    display: inherit;
}
.P_date{
    display: none;
}
.P_context{
    display: none;
}
