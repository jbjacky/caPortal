@media (max-width: 800px){
    ::ng-deep #footer {
        display: none;
    }
}
::ng-deep .vertical-alignment-helper {
    display:table;
    height: 100%;
    width: 100%;
  }
  ::ng-deep .vertical-align-center {
    /* To center vertically */
    display: table-cell;
    vertical-align: middle;
  }
  ::ng-deep .modal-content {
    /* Bootstrap sets the size of the modal in the modal-dialog class, we need to inherit it */
    width:inherit;
    height:inherit;
    /* To center horizontally */
    margin: 0 auto;
  }

  @media screen and (max-width:550px){
    .modal-dialog{
      width: 300px;
    }
    .modal-footer{
      text-align: center
    }
  }