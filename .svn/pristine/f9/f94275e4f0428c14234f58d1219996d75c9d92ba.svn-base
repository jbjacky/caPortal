
table tbody {
    display:block;
    height:300px;
    overflow-y:scroll;
    }
    
    table thead, tbody tr {
    display:table;
    width:100%;
    table-layout:fixed;
    }
    
    table thead, tbody tr td {
        word-break: break-all;
        }
    table thead {
    width: calc( 100% - 1em )
    }