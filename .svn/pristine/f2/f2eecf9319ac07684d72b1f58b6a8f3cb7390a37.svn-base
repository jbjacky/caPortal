
.P_title{
    padding-left: 15px;
    padding-right: 35px;
    text-align: right;
}
::ng-deep .ngx-select__toggle{
    padding-left: 16px;
}
::ng-deep .selectDept{
    padding-left: 0px
}
.P_Zero{
   padding: 0 
}
.inputTextarea{
    width: 100%;
    resize: none;
    height:83px;
    display: block;
    padding: 6px 12px;
    font-size: 15px;
    line-height: 1.5;
    color: #555555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 2px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}
.P_text{
    padding: 20px 50px
}
@media screen and (max-width:992px) {
   
    .P_title{
        padding-left: 0px;
        padding-right: 0px;
        text-align: left;
    }
    .P_width{
        width: 100%;
    }
    .P_Zero{
       padding: 0px 15px 
    }
    .P_text{
        padding: 20px 0px
    }
}